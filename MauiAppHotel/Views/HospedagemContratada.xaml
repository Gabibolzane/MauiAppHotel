<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray400}">



    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="{Binding QuartoSelecionado.Descricao}"
                   TextColor="DarkViolet"
                   FontFamily="Kalam"
                   FontSize="50"
                   HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <StackLayout Orientation="Horizontal">
               
                    <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                        <Label Text="Adultos: "/>
                        <Label Text="{Binding QntAdultos}"
                           TextColor="DarkViolet"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                        <Label Text="     Crianças: "/>
                        <Label Text="{Binding QntCriancas}"
                           TextColor="DarkViolet"/>
                    </HorizontalStackLayout>
             
            </StackLayout>
                
        </Frame>

        <Frame Margin="10" >
           
                <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in: "/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out: "/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia: "/>

                <Label Grid.Row="1" Grid.Column="0" 
                       Text="{Binding DataCheckIn,StringFormat='{}{0:dd/MM/yyyy}'} "
                       TextColor="DarkViolet"/>

                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding DataCheckOut,StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="DarkViolet"/>
                <Label Grid.Row="1" Grid.Column="2"
                       Text="{Binding Estadia} " 
                       TextColor="DarkViolet"/>
            </Grid>
               
        </Frame>

        <Frame Margin="10"  >
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                <Label Text="Valor Total:  "/>
                <Label Text="{Binding ValorTotal,StringFormat='{}{0:c}'}"
                       TextColor="DarkViolet"/>
            </HorizontalStackLayout>
        </Frame>

        <VerticalStackLayout Spacing="20"
                             HorizontalOptions="Center">

            <Button Text="Avançar"
                    BackgroundColor="DarkViolet"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="150"
                    Clicked="Avancar2_Clicked"
                    HorizontalOptions="Center"/>

            <Button Text="Voltar" 
            BackgroundColor="DarkViolet"
            TextColor="White"
            CornerRadius="10"
            WidthRequest="150"
            Clicked="Voltar_Clicked" 
            HorizontalOptions="Center"/>

        </VerticalStackLayout>
  

    </VerticalStackLayout>

</ContentPage>