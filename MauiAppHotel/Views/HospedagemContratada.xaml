<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             >

    <NavigationPage.TitleView>
        <Label Text="Hospedagem Contratada"
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"
               FontFamily="BricolageGrotesque"
               FontSize="30"
               TextColor="DarkBlue"
               />
    </NavigationPage.TitleView>

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="{Binding QuartoSelecionado.Descricao}"
                   TextColor="DarkBlue"
                   FontFamily="Kalam"
                   FontSize="50"
                   HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adultos: "/>
                    <Label Text="{Binding QntAdultos}"
                       TextColor="DarkBlue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="  -  Crianças: "/>
                    <Label Text="{Binding QntCriancas}"
                       TextColor="DarkBlue"/>

                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>
        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in: "/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out: "/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia: "/>

                <Label Grid.Row="1" Grid.Column="0" Text="{Binding DataCheckIn} "/>
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding DataCheckOut}"/>
                <Label Grid.Row="1" Grid.Column="2" Text="{Binding Estadia} "/>
            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Valor Total: "/>
                <Label Text="{Binding ValorTotal}"/>
            </HorizontalStackLayout>
        </Frame>

        <VerticalStackLayout Spacing="20"
                             HorizontalOptions="Center">

            <Button Text="Avançar"
                    BackgroundColor="DarkBlue"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="150"
                    Clicked="Avancar2_Clicked"/>

            <Button Text="Voltar" 
         BackgroundColor="DarkBlue"
         TextColor="White"
         CornerRadius="10"
         WidthRequest="150"
         Clicked="Voltar_Clicked"  />

        </VerticalStackLayout>


    </VerticalStackLayout>
</ContentPage>