<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray300}">

    <Grid VerticalOptions="Center" Padding="20">
        <VerticalStackLayout Spacing="20">

            
            <Label Text="Sobre o Aplicativo"
                   FontFamily="BricolageGrotesque"
                   FontSize="36"
                   TextColor="DarkViolet"
                   HorizontalOptions="Center"/>

            
            <Border
                Stroke="DarkViolet"
                StrokeThickness="1"
                Background="{StaticResource Gray500}"
                StrokeShape="RoundRectangle 15"
                Padding="20"
                Shadow="{OnPlatform Default}">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Aplicativo: HotelApp MAUI"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center"/>

                    <Label Text="Desenvolvido por: Gabrieli Bolzane"
                           FontSize="18"
                           TextColor="Black"
                           HorizontalOptions="Center"/>

                    <Label Text="Email: Gabrieli.Bolzane@example.com"
                           FontSize="17"
                           TextColor="Black"
                           HorizontalOptions="Center"/>
                    
                    <Label Text="Github: GabiBolzane"
                          FontSize="17"
                          TextColor="Black"
                          HorizontalOptions="Center"/>


                    <Label Text="Ano de desenvolvimento: 2025"
                           FontSize="18"
                           TextColor="Black"
                           HorizontalOptions="Center"/>

                    <Label Text="VersÃ£o: 1.0"
                           FontSize="16"
                           TextColor="DarkGray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            
            <Button Text="Voltar"
                    BackgroundColor="DarkViolet"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="150"
                    HorizontalOptions="Center"
                    Clicked="Voltar_Clicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>